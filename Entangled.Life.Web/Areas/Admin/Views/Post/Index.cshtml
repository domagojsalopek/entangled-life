@model EntityList

@{
    var viewModel = new AdminPostViewModel();
    var results = new EntityList<AdminPostViewModel>(Model);
    ViewBag.Title = "Posts List";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New »", "Create", "Post", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => viewModel.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => viewModel.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => viewModel.Slug)
        </th>
        <th>
            @Html.DisplayNameFor(model => viewModel.CanBeDisplayed)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in results.Results)
    {
        <tr id="item-@item.Id">
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CanBeDisplayed)
            </td>
            <td>
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id, controller = "post", area = "admin" }, new { @class = "btn btn-primary" })
                </p>
            </td>
            <td class="danger">
                @*<p>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id, controller = "category", area = "admin" }, new { @class = "btn btn-danger delete", @rel = item.Id })
                </p>*@
            </td>
        </tr>
    }

</table>

