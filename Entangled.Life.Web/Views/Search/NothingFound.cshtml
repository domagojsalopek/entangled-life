@model string
@{
    ViewBag.Title = "Nothing Found";
}

<div class="postcontent nobottommargin clearfix">
    <div id="posts">

        <h2>Sorry. Nothing found for '@Model' :(</h2>

        <div class="accordion accordion-lg divcenter nobottommargin clearfix" style="max-width:90%;">
            <div class="acctitle">Search for something else</div>
            <div class="acc_content clearfix">
                <form action="@Url.Action("index", "search")" method="get" class="search_form" data-notify-type="error" data-notify-msg="Query must be at least 3 characters long.">
                    <div class="col_full">
                        <input type="text" name="q" class="form-control" value="@Model" placeholder="Search for ..." data-minquery="3">
                    </div>
                    <div class="col_full">
                        <button class="button button-3d button-black nomargin" type="submit">Try again</button>
                    </div>
                </form>

                <div class="style-msg2">
                    <div class="msgtitle"><i class="icon-search"></i> Some helpful hints for searching:</div>
                    <div class="sb-msg">
                        <ul>
                            <li>Please verify the spelling of your search terms.</li>
                            <li>Reduce the number of keywords.</li>
                            <li>Do try again.</li>
                        </ul>
                    </div>
                </div>

            </div>

        </div>

    </div>
</div>