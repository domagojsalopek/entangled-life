@model IEnumerable<PostViewModel>
@if (Model.Any())
{
    <h4 class="highlight-me">Recent Posts</h4>
    <div id="post-list-footer">

        @foreach (var item in Model)
        {
            string linkToPost = Url.Action("details", "default", new { slug = item.Slug });

            <div class="spost clearfix">
                @if (item.PreviewImage != null)
                {
                    <div class="entry-image">
                        <a href="@linkToPost" class="nobg"><img src="@Url.Action("Image", "Resources", new { imageId = item.PreviewImage.Id, width = 48, height = 48 })" alt="@item.PreviewImage.AltText"></a>
                    </div>
                }
                <div class="entry-c">
                    <div class="entry-title">
                        <h4><a href="@linkToPost">@item.Title</a></h4>
                    </div>
                    <ul class="entry-meta">
                        <li>@item.Published.Value.ToString("dd. MMMM, yyyy.")</li>
                    </ul>
                </div>
            </div>
        }

    </div>
}