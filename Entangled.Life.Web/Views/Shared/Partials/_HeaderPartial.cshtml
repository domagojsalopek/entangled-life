@{ 
    string searchKey = "q";
}
<header id="header" class="full-header">
    <div id="header-wrap">
        <div class="container clearfix">
            <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>
            <div id="logo">
                <a href="/" class="standard-logo"><img src="/Resources/images/logo-06-2018.png" alt="@AppConfiguration.Instance.SiteName"></a>
                <a href="/" class="retina-logo"><img src="/Resources/images/logo-06-2018.png" alt="@AppConfiguration.Instance.SiteName"></a>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div id="top-account" class="dropdown">
                    <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"><i class="icon-user"></i><i class="icon-angle-down"></i></a>
                    <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                        <li><a href="@Url.Action("index", "account")">Profile</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="#" id="menu_logout" data-url="@Url.Action("logoff", "account")">Logout <i class="icon-signout"></i></a></li>
                    </ul>
                </div>
            }
            else
            {
                <div id="top-account">
                    <a href="#modal-login" data-lightbox="inline" data-toggle="modal" data-target="modal-login" class="btn btn-default"><i class="icon-user"></i></a>
                    @*<a href="@Url.Action("Login", "Account")" class="btn btn-default"><i class="icon-user"></i></a>*@
                </div>
            }
            <nav id="primary-menu">
                <ul>
                    <li><a href="/"><div>Home</div></a></li>
                    <li><a href="@Url.Action("details", "page", new { slug = "about" })"><div>About</div></a></li>
                    <li><a href="@Url.Action("index", "contact")"><div>Contact</div></a></li>
                </ul>
                <div id="top-search">
                    <a href="#" id="top-search-trigger"><i class="icon-search3"></i><i class="icon-line-cross"></i></a>
                    <form action="@Url.Action("index", "search")" method="get" class="search_form" data-notify-type="error" data-notify-msg="Query must be at least 3 characters long.">
                        <input type="text" name="@searchKey" class="form-control" value="@Request.QueryString[searchKey]" placeholder="Type &amp; Hit Enter..." data-minquery="3">
                    </form>
                </div>
            </nav>
        </div>
    </div>
</header>